@model Registration

<header>
	<link rel="stylesheet" href="/css/login.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</header>

<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<form method="post" class="form-horizontal">
				<span class="heading">РЕГИСТРАЦИЯ</span>
				<div class="form-group">
					<label asp-for="Email"></label><br />
					<input asp-for="Email" name="email" type="email" class="form-control" id="inputEmail" placeholder="E-mail">
					<span asp-validation-for="Email" />
				</div>
				<div class="form-group help">
					<label asp-for="Password"></label><br />
					<input asp-for="Password" name="password" type="password" class="form-control" id="inputPassword" placeholder="Пароль">
					<span asp-validation-for="Password" />
				</div>
				<div class="form-group help">
					<label asp-for="ConfirmPassword"></label><br />
					<input name="confirmPassword" type="password" class="form-control" id="inputPassword" placeholder="Подтвердите пароль">		
					<span asp-validation-for="ConfirmPassword" />
				</div>
				<div class="form-group">					
					<button type="submit" class="btn btn-default" asp-controller="Login" asp-action="SignUp">Зарегистрироваться</button>
				</div>
				<div class="sign-up">
					<button class="btn btn-default" asp-controller="Login" asp-action="Login">Есть аккаунт? Войти</button>
				</div>
			</form>
		</div>
	</div>
</div>

