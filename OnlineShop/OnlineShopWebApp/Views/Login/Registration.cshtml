@model Registration


@{
    <br />
    ViewData["Title"] = "Регистрация";
}

<h2 style="text-align: center;">@ViewData["Title"]</h2>
<br />
<form class="form" method="post" style="max-width: 300px; margin: 0 auto;">

    <div class="form-group">
        <label asp-for="Email">Логин:</label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль:</label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтвердите пароль:</label><br />
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <br />
    <div style="text-align: center;">
        <button asp-controller="Login" asp-action="SignUp" class="btn btn-primary">Зарегистрироваться</button>
    </div>
    <br />
    <div style="text-align: center;">
        <a href="/Login/Login" class="btn btn-secondary">Есть аккаунт? Войти</a>
    </div>
</form>

