@model Product

<h2 style="text-align: center;">Добавление продукта</h2>
<form class="form" method="post" style="max-width: 300px; margin: 0 auto;">

	<div class="form-group">
		<label asp-for="Name">Название</label><br />
		<input class="form-control" asp-for="Name" />
		<span asp-validation-for="Name"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description">Описание:</label><br />
		<input class="form-control" asp-for="Description" />
		<span asp-validation-for="Description"></span>
	</div>

	<div class="form-group">
		<label asp-for="Price">Цена:</label><br />
		<input type="number" class="form-control" asp-for="Price" />
		<span asp-validation-for="Price"></span>
	</div>

	<div class="form-group">
		<label asp-for="ImagePath">Ссылка на изображение</label><br />
		<input class="form-control" asp-for="ImagePath" />
		<span asp-validation-for="ImagePath"></span>
	</div>

	<br />
	<div style="text-align: center;">
		<button asp-controller="Admin" asp-action="AddProduct" type="submit" class="btn btn-primary">Добавить продукт</button>
	</div>
</form>
