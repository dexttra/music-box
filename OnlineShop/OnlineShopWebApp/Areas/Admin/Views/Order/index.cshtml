@model List<OrderViewModel>

<header>
	<link rel="stylesheet" href="/css/admin.css">
</header>

<h1>Список заказов</h1>
@await Html.PartialAsync("AdminPanel")

<div class="row">
	<div class="col-9">
		<h3>Список заказов</h3>
	</div>
	<div class="row">
		<table class="table">
			<thread>
				<tr>
					<th>ID</th>
					<th>Сумма</th>
					<th>Статус</th>
					<th>Дата</th>
					<th>Время</th>
					<th>Подробнее</th>
				</tr>
			</thread>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@Model[i].Id</td>
						<td>@Model[i].Price</td>
						<td>@EnumHelper.GetDisplayName(Model[i].Status)</td>
						<td>@Model[i].CreationTime.ToString("d")</td>
						<td>@Model[i].CreationTime.ToString("t")</td>
						<td>
							<a asp-area="Admin"
							   asp-controller="Order"
							   asp-action="Details"
							   asp-route-Id="@Model[i].Id">Подробнее</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
