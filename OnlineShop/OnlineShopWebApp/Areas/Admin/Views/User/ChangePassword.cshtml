@model ChangeUserPassword

<h2 style="text-align: center;">Смена пароля</h2>


<form asp-action="ChangePassword" class="form" method="post" style="max-width: 300px; margin: 0 auto;">

	<input type="hidden" name="userName" value="@Model.UserName" />


	<div class="form-group">
		<label asp-for="Password">Пароль:</label><br />
		<input class="form-control" asp-for="Password" />
		<span asp-validation-for="Password"></span>
	</div>

	<div class="form-group">
		<label asp-for="ConfirmPassword">Подтвердите пароль</label><br />
		<input class="form-control" asp-for="ConfirmPassword" />
		<span asp-validation-for="ConfirmPassword"></span>
	</div>

	<br />
	<div style="text-align: center;">
		<button type="submit" class="btn btn-primary">
			Сохранить
		</button>
	</div>
</form>
