@model List<User>

<header>
	<link rel="stylesheet" href="/css/admin.css">
</header>

<h1>Список пользователей</h1>
@await Html.PartialAsync("AdminPanel")
<div class="row">
	<div class="col-9">
		<h3>Список пользователей</h3>
	</div>
	<div class="row">
		<table class="table">
			<thread>
				<tr>
					<th>ID</th>
					<th>Логин</th>
				</tr>
			</thread>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@Model[i].Id</td>
						<td>@Model[i].Name</td>
						<td>
							<a asp-area="Admin"
							   asp-controller="User"
							   asp-action="Details"
							   asp-route-name="@Model[i].Name">Подробнее</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

