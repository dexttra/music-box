@model List<Product>

<header>
	<link rel="stylesheet" href="/css/admin.css">
</header>

<h1>Список продуктов</h1>
@await Html.PartialAsync("AdminPanel")
<div class="row">
	<div class="col-9">
		<h3>Список продуктов</h3>
	</div>
	<a asp-area="Admin"
	   asp-controller="Product"
	   asp-action="Add">Добавить товар</a>

	<div class="row">
		<table class="table">
			<thread>
				<tr>
					<th>ID</th>
					<th>Название</th>
					<th>Цена</th>
					<th>Изменить</th>
					<th>Удалить</th>
				</tr>
			</thread>
			<tbody>
				@for (int i = 0; i < Model.Count; i++)
				{
					<tr>
						<td>@Model[i].Id</td>
						<td>@Model[i].Name</td>
						<td>@Model[i].Price</td>
						<td>
							<a asp-area="Admin"
							   asp-controller="Product"
							   asp-action="Edit"
							   asp-route-productId="@Model[i].Id">Изменить</a>
						</td>
						<td><a href="#">Удалить</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

